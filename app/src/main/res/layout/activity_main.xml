<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/eathome_button"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="집밥메뉴 추천"
        app:layout_constraintBottom_toTopOf="@+id/setting_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eatout_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eatout_button"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="외식메뉴 추천"
        app:layout_constraintBottom_toTopOf="@+id/dietbyday_button"
        app:layout_constraintEnd_toStartOf="@+id/eathome_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setting_button"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="설정 및 데이터"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dietbyday_button"
        app:layout_constraintTop_toBottomOf="@+id/eathome_button" />

    <Button
        android:id="@+id/dietbyday_button"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:text="일자 별 식단"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eatout_button" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="246dp"
        android:layout_height="259dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_fastfood_24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>